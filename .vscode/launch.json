    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "ts-node Program",
            "cwd": "${fileDirname}",
            "program": "${file}",
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${fileDirname}",
            "program": "${file}",
            //"program": "${workspaceFolder}/src/sorts/quickSortRecurionByHeap.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}